#!/bin/bash

if [ -f $HOME/.station-info ]; then
	source $HOME/.station-info
	if passwd; then
		if sudo grep "^user:" /etc/shadow | awk -F ":" '{print $2}' > /arcHIVE/QRV/${MYCALL}/.passwd; then
			echo "Password saved for ${MYCALL}."
		else
			echo "Unable to save password for ${MYCALL}. Exiting."
		fi
	fi
else
	echo "Unable to determine callsign for user. Exiting."
fi
