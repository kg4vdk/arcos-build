#!/bin/bash
/usr/bin/su - user -c "DISPLAY=:0 DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus notify-send --urgency=critical --icon=stop 'Emergency Shutdown Triggered!' '/arcHIVE removed unexpectedly!'"
#/usr/bin/systemd-run --user --machine=user@.host notify-send --urgency=critical --icon=stop 'Emergency Shutdown Triggered!' '/arcHIVE removed unexpectedly!'
/usr/bin/sleep 5
/sbin/shutdown --poweroff now
